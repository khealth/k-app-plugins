{
  "env": {
    "node": true,
    "es6": true,
    "jest": true
  },  
  "plugins": ["node", "import", "react", "jsx-a11y"],
  "extends": [
    "eslint:recommended", 
    "plugin:react/recommended",
    "plugin:import/errors",
    "plugin:import/warnings"  
  ],
  "parserOptions": {
    "ecmaVersion": 6,
    "ecmaFeatures": {
        "experimentalObjectRestSpread": true,
        "jsx": true
    },
    "sourceType": "module"
  },
  "settings": {
    "import/resolver": {
      "webpack": {}
    }
  },
  "rules": {
    "node/exports-style": ["error", "module.exports"],
    "indent": [
      "error",
      4,
      {
        "SwitchCase": 1
      }
    ],
    "semi": ["error", "never"],
    "no-console": "off",
    "no-process-exit": "off",
    "node/no-missing-require": "off"
  }
}
